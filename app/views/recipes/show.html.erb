<% recipe_author = User.find_by_id(@recipe.user_id) %>
<ul class="collection">
  <li class="collection-item avatar">
    <span class="title"><h5><%= @recipe.title %></h5></span>
    <p><br>
       <%= @recipe.description %>
    </p>
    <a href="#!" class="secondary-content">
      <i class="material-icons">Post by <%= recipe_author.name %></i>
    </a>
    <hr>
    <%= link_to "Edit Recipe", edit_recipe_path(@recipe), :class=>"waves-effect waves-light btn" %>
    <%=
      link_to "Delete", "/recipes/#{@recipe.id}",
      :class=>"waves-effect waves-light grey btn",
      method: :delete, data: { confirm: "You sure?" }
    %>
    <%= link_to "Add Review", new_recipe_review_path(@recipe), :class=>"waves-effect waves-light btn" %>
  </li>
</ul>
<% @reviews.each do |review| %>
  <ul class="collection">
    <li class="collection-item avatar">
      <span class="title"><%= link_to review.title, recipe_review_path(review.recipe_id, review)%></span>
    <p><br>
    </p>
  </ul>
<% end %>
