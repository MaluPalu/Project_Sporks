


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <%= javascript_tag "Materialize.toast(`#{ devise_error_messages!}`, 8000, 'rounded')", :class=> 'toast-style'%>

<body class="orange loaded">

<div class="container">
  <div id="login-page" class="row">
    <div class="col s6 offset-s3 z-depth-4 card-panel center-align">
      <form class="login-form">
        <div class="row">
          <div class="input-field col s12 center">
            <%= image_tag "food_header/TheSpork_Logo.png", :class=>"responsive-img valign profile-image-login" %>
            <p class="center login-form-text">Sporks Login---- Changing logo</p>
          </div>
        </div>


        <div class="row margin">
          <div class="input-field col s12">
            <i class="material-icons prefix">person</i>
             <%= f.email_field :email, autofocus: true %>
            <label for="email" class="center-align">Email</label>
          </div>
        </div>
        <div class="row margin">
          <div class="input-field col s12">
            <i class="material-icons prefix">lock</i>
            <%= f.password_field :password, autocomplete: "off" %>
            <label for="password">Password</label>
          </div>
        </div>
        <div class="row">
        <% if devise_mapping.rememberable? -%>
          <div class="input-field col s12 login-text">
              <%= f.check_box :remember_me %>
              <label for="remember-me">Remember me</label>
          </div>
          <% end -%>
        </div>
        <div class="row">
          <div class="input-field col s12 center-align">
            <%= f.submit "Log in", :class=> 'btn' , :id=> 'btn' %>
          </div>
        </div>


        <div class="row">
          <div class="input-field col s6 m6 l6">
           <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to "Sign Up", new_registration_path(resource_name) %><br />
           <% end -%>
          </div>
          <div class="input-field col s6 m6 l6">
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
            <% end -%>
          </div>
        </div>

      </form>
    </div>
  </div>
</div>
<% end %>





<%= render "devise/shared/links" %>
