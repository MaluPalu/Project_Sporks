<%= render 'profile_menu' %>

<div class="row">
  <div class="col s7 push-s3">
    <h2><%= @user.name + "'s Recipes"%></h2>
    <% @recipes.each do |recipe| %>
      <ul class="collection">
        <li class="collection-item avatar">
          <span class="title"><%= link_to recipe.title, recipe_path(recipe)%></span>
        <p><br>
           <%= recipe.description %>
           <%= recipe.prep_time %>
           <%= recipe.cook_time %>
           <%= recipe.ease %>
           <%= recipe.ingredients %>
           <%= recipe.instructions %>
           <%= recipe.serves %>
           <%= recipe.photo %>
        </p>
      </ul>
    <% end %>
  </div>
  <div class="col s2 push-s3">
    <button class="btn waves-effect waves-light profile-button">
      <%= link_to "Add Recipe", new_recipe_path %>
    </button>
    <button class="btn waves-effect waves-light profile-button">
      Open Fridge
    </button>
  </div>
</div>
