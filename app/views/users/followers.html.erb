<%= render 'profile_menu' %>

<div class="row">
  <div class="col s8 push-s3">
    <h2><%= "Who Follows #{@user.name}"%></h2>
  </div>
</div>

<div class="row">
  <% @followers.each do |follower| %>
    <div class="col s5 push-s3">
      <div class="card">
        <div class="card-image">
          <img src="<%=follower.picture%>">
        </div>
        <div class="card-content">
          <h4><%= follower.name %></h4>
          <big><%= follower.username %></big>
        </div>
        <div class="card-action">
          <a><%= link_to "Go to Profile", user_path(follower)%></a>
        </div>
      </div>
    </div>
    <% end %>
  </div>
