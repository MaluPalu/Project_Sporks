<%= render 'profile_menu' %>

<div class="row">
  <div class="col s8 push-s3">
    <h2>Activity Feed</h2>
    <% if current_user && !same_as_current_user? %>
      <% if following_user? %>
        <%= link_to "Unfollow", follow_user_path(@user, type: "unfollow"),
        :class=> "btn waves-effect orange", method: :put %>
      <% else %>
        <%= link_to "Follow", follow_user_path(@user, type: "follow"),
        :class=> "btn waves-effect orange", method: :put %>
      <% end %>
    <% end %>

    <div class="row">
      <% @feed.each do |item| %>
      <div class="col s5">
        <% if item.is_a?(Recipe) %>
          <%= render 'recipe_card', recipe: item %>
        <% else %>
          <%= render 'review_card', review: item %>
        <% end %>
        </div>
      <% end %>
    </div>

    <% if flash[:notice] %>
      <%= javascript_tag "Materialize.toast(`#{ flash[:notice]}`, 4000, 'rounded')", :class=> 'toast-style'%>
    <% end %>
  <div>
</div>
